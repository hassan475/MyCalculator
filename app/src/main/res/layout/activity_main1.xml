<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="99dp"
        android:orientation="vertical"
        android:layout_weight="0.67">


        <TextView
            android:id="@+id/txtSolution"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            android:background="@android:color/background_light"
            android:clickable="false"
            android:gravity="right"
            android:onClick="btnOne_OnClick"
            android:paddingRight="10sp"
            android:paddingTop="5sp"
            android:textSize="15pt"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnSeven"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1.11"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnSeven_OnClick"
            android:text="7"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnEight"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnEight_OnClick"
            android:text="8"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnNine"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnNine_OnClick"
            android:text="9"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.15"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnDiv_OnClick"
            android:text="/"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnFour"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.01"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnFour_OnClick"
            android:text="4"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnFive"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnFive_OnClick"
            android:text="5"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnSix"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnSix_OnClick"
            android:text="6"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_weight=".98"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnMul_OnClick"
            android:text="x"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnOne"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.24"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnOne_OnClick"
            android:text="1"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnTwo"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.24"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnTwo_OnClick"
            android:text="2"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnThree"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.19"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnThree_OnClick"
            android:text="3"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.27"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnSub_OnClick"
            android:text="-"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.01"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnClear_OnClick"
            android:text="C"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnZero"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".98"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnZero_OnClick"
            android:text="0"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnEquals"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".95"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnEquals_OnClick"
            android:text="="
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".93"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:onClick="btnAdd_OnClick"
            android:text="+"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>